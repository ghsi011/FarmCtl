<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme using Material Components -->
	<style name="Theme.MyAndroidApp"
		parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<!-- Primary brand colors. -->
		<item name="colorPrimary">@color/md_theme_light_primary</item>
		<item name="colorPrimaryVariant">@color/md_theme_light_primary</item>
		<item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>

		<!-- Secondary brand colors -->
		<item name="colorSecondary">@color/md_theme_light_secondary</item>
		<item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>

		<!-- Status bar color. -->
		<item name="android:statusBarColor" tools:targetApi="l">@color/md_theme_light_primary</item>
	</style>
</resources>
